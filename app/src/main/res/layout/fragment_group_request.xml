<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@color/colorTealBackground"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/groupName"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/GroupName"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            tools:ignore="SpeakableTextPresentCheck"
            tools:src="@tools:sample/avatars" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:dividerPadding="20dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/participant6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/participant5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/participant4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/participant3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/participant2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/participant1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/participantsLeftoverNumber"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/Add2"
                android:textAlignment="center"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/Message"
        android:textColor="@color/colorGrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5" />

        <Button
            android:id="@+id/acceptButton"
            android:layout_width="7dp"
            android:layout_height="24dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/lightBlue"
            android:text="V"
            android:textAlignment="center" />

        <Button
            android:id="@+id/refuseButton"
            android:layout_width="7dp"
            android:layout_height="24dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/lightBlue"
            android:text="X"
            android:textAlignment="center" />

        <Button
            android:id="@+id/infoButton"
            android:layout_width="7dp"
            android:layout_height="24dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/lightBlue"
            android:text="..."
            android:textAlignment="center" />
    </LinearLayout>

</LinearLayout>